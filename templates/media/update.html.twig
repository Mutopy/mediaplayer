{% extends 'layout.html.twig' %}

{% block body %}
    <div class="main-content-container container-fluid px-4">
        <div class="page-header row no-gutters py-4">
            <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
                <span class="text-uppercase page-subtitle">Média</span>
                <h3 class="page-title">Modification d'un média</h3>
            </div>
        </div>
        <div class="card card-small mb-4">
            <div class="card-header border-bottom">
                <h6 class="m-0">Modification</h6>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item px-3">
                    <div class="col-sm-12 col-md-6">
                        <div class="row">
                            {{ form_start(form) }}
                            <div class="text-danger">
                                {{ form_errors(form) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.file_media) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.file_picture) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.description) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.genre) }}
                            </div>
                            <button type="submit" class="btn btn-primary"><i class="material-icons">check</i> Valider</button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}