{% extends 'layout.html.twig' %}

{% block body %}
    <h1 class="mt-3">Liste des m√©dias</h1>
    <div class="row mt-3">
    {% for key,item in list %}
        <div class="card mr-3 mt-1" style="width: 18rem;">
            <div style="width:100%;height:150px;overflow:hidden;">
                <img class="" src="{{ asset('medias/' ~ item.picture) }}" alt="Card image cap" width="100%">
            </div>
            <div class="card-body">
                <h5 class="card-title">{{ item.name }}</h5>
                <span class="badge badge-secondary">{{ item.genre.type.name ~ " / " ~ item.genre.name }}</span>
                <p class="card-text">{{ item.description }}</p>
                <a href="{{ asset('medias/' ~ item.name ~ '.' ~ item.extension) }}" class="btn btn-primary">Details</a>
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}