<aside class="main-sidebar col-12 col-md-3 col-lg-2 px-0">
    <div class="main-navbar">
        <nav class="navbar align-items-stretch navbar-light bg-white flex-md-nowrap border-bottom p-0">
            <a class="navbar-brand w-100 mr-0" href="#" style="line-height: 25px;">
                <div class="d-table m-auto">
                    <img id="main-logo" class="d-inline-block align-top mr-1" style="max-width: 25px;" src="{{ asset('img/media.png') }}" alt="Shards Dashboard">
                    <span class="d-none d-md-inline ml-1">MediaPlayer</span>
                </div>
            </a>
        </nav>
    </div>
    {% set current_path = app.request.get('_route') %}
    <div class="nav-wrapper">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link {% if current_path == 'media_list' %}active{% endif %}" href="{{ path('media_list') }}">
                    <i class="material-icons">view_module</i>
                    <span>Parcourir</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link {% if current_path == 'media_create' %}active{% endif %}" href="{{ path('media_create') }}">
                    <i class="material-icons">note_add</i>
                    <span>Ajouter un média</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link {% if current_path == 'media_manage' %}active{% endif %}" href="{{ path('media_manage') }}">
                    <i class="material-icons">list</i>
                    <span>Mes médias</span>
                </a>
            </li>
            {% if is_granted('ROLE_ADMIN') %}
            <li class="nav-item">
                <a class="nav-link" href="/mediaplayer/public/admin">
                    <i class="material-icons">build</i>
                    <span>Admin</span>
                </a>
            </li>
            {% endif %}
        </ul>
    </div>
</aside>