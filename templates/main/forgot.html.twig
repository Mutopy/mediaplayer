{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    {% include 'inc/title.html.twig' %}
    <div class="col-3 mt-3 center-block vertical-center">
        <div class="card card-small mb-3">
            <div class="card-header border-bottom">
                <h6 class="m-0">Mot de passe oublié</h6>
            </div>
            <div class="card-body p-0">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item p-3">
                        <form action="{{ path('forgot') }}" method="post" autocomplete="false">
                            <div class="form-group">
                                <label for="username">Email</label>
                                <input type="text" id="email" class="form-control" name="_email" value="" />
                            </div>
                            <div class="form-group">
                                <label for="password">Nouveau mot de passe</label>
                                <input type="password" id="password" class="form-control" name="_password" />
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <button type="submit" class="btn btn-block btn-primary"><i class="material-icons">vpn_key</i> Envoyer</button>
                            <br>
                            <a href="{{ path('login') }}">Se connecter</a>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}